<%- include('../../partials/siteHeader', {pageTitle: "Dishes Page"}) %>

<h3>Edit Product</h3>

<table>
    <tr>
        <td>
            <form action="../update" method="post" enctype="multipart/form-data">
                <label for="productName">product Name</label>
                <input type="text" name="productName" id="productName" value="<%= oneProduct[0].productName %>">
                <br>
                <label for="weight">weight</label>
                <input type="number" name="weight" id="weight" value="<%= oneProduct[0].weight %>">
                <br>
                <label for="photo">photo</label>
                <input type="file" name="photo" id="photo" onchange="photoPreviewFn(this);">
                <br>

                <input type="hidden" name="id" value="<%= oneProduct[0].id %>">

                <input type="submit" value="Update Product">
            </form>
        </td>
        <td>
            <img src="/img/uploades/<%=oneProduct[0].photo%>" id="photoPreview" alt="photo preview" style="max-width: 55%; max-height: 55%;">
        </td>
    </tr>
</table>

<script>
    function photoPreviewFn(inputFile) {
        var file = inputFile.files[0];
        if(file) {
            var reader = new FileReader();
            reader.onload = () => {
                document.getElementById("photoPreview").setAttribute("src", reader.result);
            }
            reader.readAsDataURL(file);
        }
    }
</script>


<%- include('../../partials/siteFooter') %>